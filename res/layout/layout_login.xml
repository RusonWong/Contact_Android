<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
  >
    
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        
	<LinearLayout
	    android:id="@+id/login_main"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="vertical" 
	    >

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/login_page_margin_top"
			    android:layout_gravity="center"
			    android:gravity="center_horizontal">
			    <ImageView android:src="@drawable/login_logo"
			        	android:layout_width="match_parent"
			        	android:layout_marginLeft="40dp"
			        	android:layout_marginRight="40dp"
			        	android:layout_height="wrap_content"/>
			</LinearLayout>
		
	
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        >
	        <TextView 
	            android:text="@string/login_input_username"
	            android:layout_width="wrap_content"
	            android:textColor="@color/white"
	            android:layout_height="20dp"
	            android:textSize="12sp"
	            android:layout_marginTop="5dp"
	            android:layout_gravity="left"/>
	        <EditText 
	            android:id="@+id/input_username"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/login_input_bg"
	            android:hint=""
	            android:singleLine="true"/>
	        
	         <TextView 
	            android:text="@string/login_input_password"
	            android:layout_width="wrap_content"
	            android:textColor="@color/white"
	            android:layout_height="20dp"
	            android:layout_marginTop="10dp"
	            android:textSize="12sp"
	            android:layout_gravity="left"
	            />
	        <EditText 
	            android:id="@+id/input_password"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/login_input_bg"
	            android:inputType="textPassword"
	            android:singleLine="true"/>
	      
	       	<CheckBox android:id="@+id/save_passwd_btn"
		   		 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"
		   		 android:layout_marginTop="10dp"
		   		 android:textSize="14sp"
		   		 android:button="@drawable/check_box_selector"
		   		 android:textColor="@color/white"
		   		 android:text="记住密码"/>
	        
	      
			
	        <Button 
	            android:id="@+id/login_btn"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:layout_marginTop="20dp"
	            android:layout_marginBottom="30dp"
	            android:text="@string/login_dologin"
	            android:textSize="15sp"
	            android:background="@drawable/login_btn_bg_selector"
	            android:textColor="@color/white"
	            />
	    </LinearLayout>
	    
	</LinearLayout>
	
</ScrollView>
	  
	
</RelativeLayout>